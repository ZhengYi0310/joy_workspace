catkin_package(INCLUDE_DIRS
               LIBRARIES 
               CATKIN_DEPENDS cmake_modules message_runtime roscpp usc_utilities rosbag sensor_msgs std_msgs
               DEPENDS Eigen Eigen3 Boost)

include_directories(
  include
  ${catkin_INCLUDE_DIRS}
)


